<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <!-- Main activity theme. -->
    <style name="AppTheme.main" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--detail Activity them-->
    <style name="AppTheme.detail" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/detail_window_enter_transitions</item>
        <item name="android:windowReturnTransition">@transition/detail_window_return_transition</item>
    </style>


</resources>